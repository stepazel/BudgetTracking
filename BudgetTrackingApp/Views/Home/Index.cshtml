@{
    ViewData["Title"] = "Home Page";
}
@model BudgetTrackingApp.Models.HomepageModel
<div class="text-center" id="parent-div">
    <h1 class=" pd-5">Výdaje</h1>
    <section>
        <form asp-controller="Home" asp-action="AddExpense" method="post">
            <div class="row justify-content-center">
                <div class="form-group col-3">
                    <input class="form-control " name="description" placeholder="Zadejte popis výdaje"/>
                </div>
                <div class="form-group col-3">
                    <input class="form-control" name="amount" type="number" placeholder="Zadejte částku v korunách"/>
                </div>
                <div class="form-group col-2">
                    <select name="category" class="form-control">
                        <option value="groceries">Nákup</option>
                        <option value="food">Jídlo (restaurace)</option>
                        <option value="housing">Bydlení</option>
                        <option value="drinks">Pití (zbytné)</option>
                        <option value="transport">Doprava</option>
                    </select>
                </div>
                <div class="col-1">
                    <input class="btn btn-primary" hx-post="/Home/Addexpense" hx-target="body" hx-swap="innerHTML" type="submit" name="submit" value="Přidat">
                </div>
            </div>
        </form>
    </section>
    <section>
        <table class="table">
            <thead>
            <th>Výdaj</th>
            <th>Cena v Kč</th>
            <th>Datum</th>
            </thead>
            <tbody>
            @foreach (var expense in Model.Expenses)
            {
                <tr>
                    <td>@expense.Description</td>
                    <td>@expense.Amount</td>
                    <td>@expense.Created.ToShortDateString()</td>
                </tr>
            }
            </tbody>
        </table>
    </section>
</div>
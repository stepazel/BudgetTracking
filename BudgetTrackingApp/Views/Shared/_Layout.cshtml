<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav>
        <ul class="nav">
            <li class="nav-item">
                <a class="brand" asp-area="" asp-controller="Home" asp-action="Index">Správce výdajů</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Insights" asp-action="Index">Statistiky</a>
            </li>
            <li class="nav-item">
                @if (Context.User.Identity?.IsAuthenticated == true)
                {
                    <a class="nav-link" asp-controller="User" asp-action="Logout">Odhlásit se</a>
                }
                else
                {
                    <a class="nav-link" asp-controller="User" asp-action="Index">Přihlásit se</a>
                }
            </li>
        </ul>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer style="position: absolute; bottom: 0; width: 100%; padding: 1rem" class="border-top footer text-muted">
    <div class="container">
        Neutrácej tolik.
    </div>
</footer>

<script src="https://unpkg.com/htmx.org@1.9.8"></script>


<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>